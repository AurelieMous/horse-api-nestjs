generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model des categories de chevaux
model Category {
  id          Int             @id @default(autoincrement())
  name        String
  description String
  breed       BreedCategory[]
  image       String
}

// model des robes de chevaux
model Coat {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  breed       BreedCoat[]
  image       String
}

// Utilisation cheveaux
model Use {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  breed       BreedUse[]
  image       String
}

// Model des pays
model Country {
  id    Int     @id @default(autoincrement())
  name  String
  breed Breed[]
}

// Table M2M
model BreedCategory {
  id         Int      @id @default(autoincrement())
  breed      Breed    @relation(fields: [breedId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
  breedId    Int
  categoryId Int
}

model BreedCoat {
  id      Int   @id @default(autoincrement())
  breed   Breed @relation(fields: [breedId], references: [id])
  coat    Coat  @relation(fields: [coatId], references: [id])
  breedId Int
  coatId  Int
}

model BreedUse {
  id      Int   @id @default(autoincrement())
  breed   Breed @relation(fields: [breedId], references: [id])
  use     Use   @relation(fields: [useId], references: [id])
  breedId Int
  useId   Int
}

// Model des races des chevaux
model Breed {
  id          Int             @id @default(autoincrement())
  name        String
  description String
  categoryId  BreedCategory[]
  coatId      BreedCoat[]
  useId       BreedUse[]
  country     Country         @relation(fields: [countryId], references: [id])
  countryId   Int
  image       String
  size        String
  weight      String
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
  // role  User ou admin Ã  voir
}
